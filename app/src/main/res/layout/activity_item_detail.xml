<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hackathonstuttgart.smartfoodapp.smartfoodapp.ItemDetailActivity"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_detail_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"/>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_margin="5dp">
            <TextView android:id="@+id/item_detail_header"
                android:textStyle="bold" android:textSize="24sp" android:layout_columnSpan="2"  android:layout_margin="5dp"/>
            <TextView android:text="Added:" android:textSize="18sp" android:layout_margin="5dp"/>
            <TextView android:id="@+id/item_detail_added" android:textSize="18sp" android:layout_margin="5dp"/>
            <TextView android:text="Expiration:" android:textSize="18sp" android:layout_margin="5dp"/>
            <TextView android:id="@+id/item_detail_expiration" android:textSize="18sp" android:layout_margin="5dp"/>
        </GridLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Recipes"
        android:layout_gravity="center_horizontal|center"
        android:background="#8cbdaa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="256px"
            android:layout_height="210.5px"
            android:src="@drawable/apfelkuchen"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swabian Apple Pie"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients: 8 Apples, 500g Mehl, 250g Zucker..."
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout><LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="256px"
        android:layout_height="210.5px"
        android:src="@drawable/apfelstrudel"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Omis Apple Strudel"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients: 3 Apples, 200g Mehl, 150g Rohrzucker..."
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>

</LinearLayout>
